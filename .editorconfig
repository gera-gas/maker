root = true  # Это корневой файл

[*]  # Для всех файлов
indent_style = space  # Используем пробелы вместо табов
indent_size = 4       # 4 пробела на отступ
end_of_line = lf      # Unix-style line endings (\n)
charset = utf-8       # Кодировка
trim_trailing_whitespace = true  # Удаляем лишние пробелы в конце строк
insert_final_newline = true      # Добавляем пустую строку в конце файла

[*.py]  # Особые правила для Python
indent_size = 4
max_line_length = 88  # Согласно PEP 8 и black

[*.{yaml,yml}]  # Для YAML файлов
indent_size = 2  # YAML обычно использует 2 пробела

[*.md]  # Для Markdown
trim_trailing_whitespace = false  # В MD пробелы могут быть значимы

[Makefile]  # Для Makefile
indent_style = tab  # Makefile требует табы
